<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="index" type="int" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/ten"
            android:src="@drawable/doctor"
            android:padding="@dimen/ten"
            android:background="@drawable/profileimg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppin_reg"
            android:text="William Jones"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_twl"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/imageview"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            style = "?android:attr/ratingBarStyleSmall"
            android:rating="3.5"
            android:layout_marginStart="@dimen/ten"
            app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintStart_toEndOf="@+id/imageview"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Loreum ipsum dolor sit amet, consecturer adipiscing elit,sed do eiusmod tempor incididunt labour dolore magne aliqua  Ut"
            android:textSize="@dimen/textsize_twl"
            android:textColor="@color/darkgray"
            app:layout_constraintStart_toEndOf="@+id/imageview"
            app:layout_constraintTop_toBottomOf="@+id/ratingbar" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>