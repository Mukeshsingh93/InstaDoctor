<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="index" type="int" />

        <variable name="viewModel"
            type="com.softgates.instadoctor.network.HomeList"
            />
        <variable
            name="clickListener"
            type="com.softgates.instadoctor.home.OnClick" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{() -> clickListener.onView(viewModel,index)}"
    >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/fifteen"
        android:layout_marginTop="@dimen/ten"
        android:src="@drawable/doctor"
        android:padding="@dimen/ten"
        android:background="@drawable/profileimg"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/twoenty"
        android:layout_marginTop="@dimen/ten"
        app:layout_constraintTop_toBottomOf="@+id/imageview"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrowicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/fifteen"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppin_reg"
        android:text="Dr. William Jones"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_twl"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/activedeactiveview"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/offline_dr"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintStart_toEndOf="@+id/username"
        android:layout_marginStart="@dimen/five"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textSize="@dimen/textsize_twl"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintStart_toEndOf="@+id/activedeactiveview"
        android:layout_marginStart="@dimen/five"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MBSS, FCPC, MF, MACP"
        android:textSize="@dimen/textsize_twl"
        app:layout_constraintStart_toEndOf="@+id/imageview"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.5"
        style = "?android:attr/ratingBarStyleSmall"
        android:layout_marginStart="@dimen/ten"
        app:layout_constraintTop_toBottomOf="@+id/profession"
        app:layout_constraintStart_toEndOf="@+id/imageview"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(200)"
        app:layout_constraintTop_toTopOf="@+id/ratingbar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingbar"
        android:layout_marginStart="@dimen/five"
        android:textSize="@dimen/textsize_twl"
        app:layout_constraintStart_toEndOf="@+id/ratingbar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>