<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Noactionbar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="splashNoactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#EDF9F5</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">#EDF9F5</item>
    </style>

    <style name="homeNoactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/homebg</item>
        <item name="colorPrimaryDark">@color/homebg</item>
        <item name="colorAccent">@color/homebg</item>
    </style>

    <style name="yelloNoactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/yellow</item>
    </style>


    <style name="seekbarstyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#FF000000</item>
        <item name="android:progressTint">@color/darkgreen</item>
        <item name="android:colorControlActivated">@color/darkgreen</item>
    </style>

    <style name="blackNoactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:keyTextSize">18sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

    </style>

   <style name="InputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/black</item>
       <item name="colorControlNormal">@color/black</item>
   </style>
    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:textSize">10sp</item>
        <item name="colorAccent">#ffff0000</item>
    </style>


    <style name="TextLabelblue" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:keyTextSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="TextLabelDialog" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:keyTextSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

